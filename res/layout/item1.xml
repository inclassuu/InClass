<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dip" >

        <LinearLayout
            android:id="@+id/thumbnail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dip"
            android:background="#F8F8FF"
            android:padding="3dip" >

            <ImageView
                android:id="@+id/list_image"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/aap" />
        </LinearLayout>

        <TextView
            android:id="@+id/username_ument"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/thumbnail"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="User_name"
            android:textColor="#040404"
            android:textSize="15dip"
            android:textStyle="bold"
            android:typeface="sans" />

        <TextView
            android:id="@+id/time_ument"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/username_ument"
            android:layout_marginTop="1dip"
            android:layout_toRightOf="@+id/thumbnail"
            android:text="01-08-2015"
            android:textColor="#343434"
            android:textSize="10dip" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text=">>" />
    </RelativeLayout>

    <TextView
        android:id="@+id/text_ument"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textSize="18sp" 
        android:text="this is Ument. i like it!" />

    <TextView
        android:id="@+id/add_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/event"
        android:textColor="#00BFFF"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:weightSum ="1"
        android:orientation="horizontal" >

         <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="Like"
            android:textSize="15sp" 
            android:background="@drawable/umentborder"
            android:textColor="#BEBEBE"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="0.5"
            android:text="comment"
            android:background="@drawable/umentborder"
            android:textSize="15sp"
            android:textColor="#BEBEBE" />
    </LinearLayout>

</LinearLayout>